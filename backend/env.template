# ========================================
# SwapSync Environment Variables Template
# ========================================
# Copy this file to .env and update with your actual values
# Command: copy env.template .env (Windows) or cp env.template .env (Linux/Mac)

# ========================================
# ARKASEL SMS (Primary) - REQUIRED
# ========================================
# Get your API key from: https://sms.arkesel.com
ARKASEL_API_KEY=your-arkasel-api-key-here
ARKASEL_SENDER_ID=SwapSync

# ========================================
# HUBTEL SMS (Fallback) - Optional
# ========================================
# Get credentials from: https://developers.hubtel.com
HUBTEL_CLIENT_ID=your-hubtel-client-id-here
HUBTEL_CLIENT_SECRET=your-hubtel-client-secret-here
HUBTEL_SENDER_ID=SwapSync

# ========================================
# JWT Secret - REQUIRED
# ========================================
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key

# ========================================
# Database - Default is SQLite
# ========================================
DATABASE_URL=sqlite:///./swapsync.db

# ========================================
# CORS Origins - Update for production
# ========================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# Default Admin User
# ========================================
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@swapsync.local
DEFAULT_ADMIN_PASSWORD=admin123

# ========================================
# Environment Settings
# ========================================
ENVIRONMENT=development
DEBUG=True
PORT=8000

